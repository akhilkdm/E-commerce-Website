<section>
    <div class="container">
       <div class="container mt-4">
            <a href="/admin/add-product " class="btn btn-danger ml-auto float-end">Add Product +</a>
        </div>

        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Original Price</th>
      <th scope="col">Offer Percentage</th>
      <th scope="col">Offer Price</th>
      <th>Image</th>
      <th>Image2</th>
      <th>Image3</th>



    </tr>
  </thead>
  <tbody>
      {{#each products}}

    <tr>
      <th scope="row">{{inc @index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
       <td>{{this.originalPrice}}</td>
        <td>{{this.offerPercentage}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height:50px;" src="/product-images/{{this._id}}.jpg" alt="" ></td>
      <td><img style="width: 50px;height:50px;" src="/product-images2/{{this._id}}.jpg" alt="" ></td>
      <td><img style="width: 50px;height:50px;" src="/product-images3/{{this._id}}.jpg" alt="" ></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit *</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.Name}} ?')">Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>