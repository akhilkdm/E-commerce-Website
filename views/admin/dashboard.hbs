<script>
    // setup 
    function runf() {
        $.ajax({
            url: '/admin/getChartDetails',
            method: 'get',
            success: async (chartDatas) => {
                data1 = []

                chartDatas.dailyIncome.map((value) => {
                    data1.push({ x: value._id, y: value.totalAmount })
                })

                const data = {
                    labels: chartDatas.daysOfWeek,
                    datasets: [{
                        label: 'Weekly Sales',
                        data: data1,
                        backgroundColor: [
                            'rgb(60, 60, 60)',


                        ],
                        borderColor: [
                            'red'
                        ],
                        borderWidth: 2
                    }]
                };

                // config 
                const config = {
                    type: 'bar',
                    data,
                    options: {
                        scales: {
                            x: {
                                type: 'time',
                                time: {
                                    unit: 'day'
                                }
                            },
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                };

                // render init block
                const myChart = new Chart(
                    document.getElementById('myChart'),
                    config
                );
            }
        })
    }

